{
  "name": "gpt-telegram-bot",
  "version": "1.0.0",
  "description": "",
  "main": "build/src/bot-server.js",
  "type": "module",
  "engines": {
    "npm": "please-use-pnpm",
    "pnpm": ">= 8",
    "node": ">= 18"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "NODE_NO_WARNINGS=1 pnpm dev:watch",
    "start": "NODE_NO_WARNINGS=1 pnpm dev:start",
    "status": "pnpm server:status",
    "test": "pnpm check:test",
    "check:test": "jest src",
    "check:lint": "eslint src",
    "check:ts": "tsc --noEmit",
    "check:verify": "pnpm check:ts && pnpm check:lint",
    "dev:start": "ts-node-esm src/bot-server.ts",
    "dev:watch": "nodemon -x 'ts-node-esm src/bot-server.ts' --ext ts,js,json,jsx",
    "server:start": "pm2 delete gptBotServer || true && pm2 start 'ts-node-esm src/bot-server.ts' --name gptBotServer --no-daemon",
    "server:stop": "pm2 stop gptBotServer",
    "server:restart": "pm2 restart gptBotServer || pnpm server:start",
    "server:status": "pm2 list",
    "server:log": "pm2 log gptBotServer",
    "prod:install": "pnpm install --prod --frozen-lockfile",
    "git:commit": "git add -A && git commit && git push",
    "git:fcommit": "git add -A && git commit --no-verify && git push",
    "git:acommit": "git add -A && git commit --amend --no-edit && git push --force"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/lodash": "^4.14.194",
    "@types/node": "^18.16.3",
    "@types/node-telegram-bot-api": "^0.61.6",
    "chatgpt": "^5.2.2",
    "dotenv": "^16.0.3",
    "execa": "^7.1.1",
    "lodash": "^4.17.21",
    "node-telegram-bot-api": "^0.61.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "eslint": "^8.39.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "nodemon": "^2.0.22",
    "ts-prune": "^0.10.3"
  }
}
