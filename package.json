{
  "name": "gpt-telegram-bot",
  "version": "1.0.0",
  "description": "",
  "main": "build/src/bot-server.js",
  "type": "module",
  "engines": {
    "npm": "please-use-pnpm",
    "pnpm": ">= 8",
    "node": ">= 18"
  },
  "scripts": {
    "build": "pnpm dev:build",
    "deploy": "pnpm prod:deploy",
    "dev": "NODE_NO_WARNINGS=1 pnpm dev:watch",
    "start": "NODE_NO_WARNINGS=1 pnpm dev:start",
    "stop": "pnpm dev:stop",
    "status": "pnpm server:status",
    "check:lint": "eslint src",
    "check:ts": "tsc --noEmit",
    "check:verify": "pnpm check:lint",
    "dev:build": "tsc",
    "dev:watch": "tsc --watch & nodemon build/src/bot-server.js --ext ts,js,json,jsx",
    "dev:start": "NODE_NO_WARNINGS=1 pnpm dev:build && node build/src/bot-server.js",
    "server:start": "pm2 start build/src/bot-server.js",
    "server:stop": "pm2 stop build/src/bot-server.js",
    "server:restart": "pm2 restart build/src/bot-server.js",
    "server:status": "pm2 list",
    "server:log": "pm2 log build/src/bot-server.js",
    "prod:install": "pnpm install --prod --frozen-lockfile",
    "prod:deploy": "git pull && pnpm prod:install && pnpm server:restart"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/lodash": "^4.14.194",
    "@types/node": "^18.16.3",
    "@types/node-telegram-bot-api": "^0.61.6",
    "chatgpt": "^5.2.2",
    "dotenv": "^16.0.3",
    "execa": "^7.1.1",
    "lodash": "^4.17.21",
    "node-telegram-bot-api": "^0.61.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "eslint": "^8.39.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "nodemon": "^2.0.22",
    "ts-prune": "^0.10.3"
  }
}
